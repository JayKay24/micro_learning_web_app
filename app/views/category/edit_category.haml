.mui-container
  .home-card-wide.mdl-card.mdl-shadow--2dp
    %form{ action: "/category/#{@category.id}", name: 'createCategory', method: 'POST', class: 'mui-form' }
      %input{ type: 'hidden', name: '_method', value: 'PUT' }
      %legend Edit Category
      .mui-textfield.mui-textfield--float-label
        %input(required){ type: 'text',  name: 'category', id: 'category', value: "#{@category.category_name}"}
        %label{ for: 'category'} Category
      .mui-textfield.mui-textfield--float-label
        %textarea(required){ type: 'text', name: 'category_description', id: 'category_description' }
          = "#{@category.description}"
        %label{ for: 'category_description' } Description
      %br
        %button{ type: 'submit', class: 'mui-btn mui-btn--raised' } Save
        %a{ class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', href: '/categories' } Cancel