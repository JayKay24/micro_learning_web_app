!!!
%html
  %head
    %title Erudite
    %script{ defer: true, src: 'https://code.getmdl.io/1.3.0/material.min.js' }
    %link{ rel: 'stylesheet', href: 'https://code.getmdl.io/1.3.0/material.indigo-pink.min.css' }
    %link{ rel: 'stylesheet', href: '//cdn.muicss.com/mui-0.9.39/css/mui.min.css' }
    %link{ rel: 'stylesheet', href: 'https://fonts.googleapis.com/icon?family=Material+Icons' }
    %link{ rel: 'stylesheet', href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' }
    %link{ rel: 'stylesheet', href: '/stylesheets/styles.css' }
    %script{ src: '//cdn.muicss.com/mui-0.9.39/js/mui.min.js' }
    %script{ src: 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' }
    %script{ src: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' }
  %body
    .mdl-layout.mdl-js-layout
      %header.mdl-layout__header
        .mdl-layout__header-row
          / Title
          %span.mdl-layout-title.mdl-navigation__link
            %a{ href: '/' } Erudite
          - if @current_user
            %nav.mdl-navigation
              %a.mdl-navigation__link{ href: '/category/new' } Create Category

          / Add spacer, to align navigation to the right
          .mdl-layout-spacer
          / Navigation
          %nav.mdl-navigation
            - if @current_user
              %a.mdl-navigation__link{ href: '/link/view' } Today's link
              %a.mdl-navigation__link{ href: '/history' } History
              %a.mdl-navigation__link{ href: '/settings' } Settings
              %a.mdl-navigation__link{ href: '#' }
                = @current_user.first_name
      .mdl-layout__drawer
        %span.mdl-layout-title Home
        %nav.mdl-navigation
          - if @current_user.nil?
            %a.mdl-navigation__link{ href: '/signup' } Sign Up
            %a.mdl-navigation__link{ href: '/login' } Sign In
          - else
            %a.mdl-navigation__link{ href: '/category' } Categories
        .mdl-layout-spacer
        %nav.mdl-navigation
          - if @current_user
            %a.mdl-navigation__link{ href: '/logout', id: 'logout' } Log Out

      %main.mdl-layout__content
        - if flash[:error]
          %div.alert.alert-danger.alert-dismissible
            %a( href= '#' class= 'close' data-dismiss= 'alert' aria-label= 'close' ) &times;
            = flash[:error]

        - if flash[:success]
          %div.alert.alert-success.alert-dismissible
            %a( href= '#' class= 'close' data-dismiss= 'alert' aria-label= 'close' ) &times;
            = flash[:success]

        - if flash[:info]
          %div.alert.alert-info.alert-dismissible
            %a( href= '#' class= 'close' data-dismiss= 'alert' aria-label= 'close' ) &times;
            = flash[:info]
            
        - if flash[:warning]
          %div.alert.alert-warning.alert-dismissible
            %a( href= '#' class= 'close' data-dismiss= 'alert' aria-label= 'close' ) &times;
            = flash[:warning]
        =yield
      %footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          .mdl-logo Erudite
          %ul.mdl-mini-footer__link-list
            %li
              %a{ href: '#' } Help
              %a{ href: '#' } Privacy & Terms

%script{ src: '/javascript/delete_modal.js' }